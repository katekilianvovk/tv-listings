<!-- if there are show listings that match the show_id of @show -->
<% if @show_listings.any? %>
  <% @show_listings.each do |listing| %>
    <%= "#{@show.name} is showing on #{Channel.find(listing.channel_id).name} on #{listing.date.strftime("%m/%d/%Y")}" %>
  <% end %>
<% else %>
  <%= "No Show Listings for #{@show.name}" %>
<% end %>


<%= link_to "New Show Listing", new_show_listing_path %>

<%= link_to "Edit", edit_show_path(@show) %>
